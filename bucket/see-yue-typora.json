    "post_install": [
        "$themepath = Join-Path $env:AppData 'Typora\\themes'",
        "if (!(Test-Path $themepath)) { New-Item -ItemType Directory -Path $themepath -force | Out-Null }",
        "Get-ChildItem -Path $dir -filter *.css | ForEach-Object { Copy-Item $_.FullName -Destination $themepath -Force }",
        "Get-ChildItem -Path $dir 'SeeYue' | Copy-Item -Destination $themepath -Recurse -Force"
    ]
}
