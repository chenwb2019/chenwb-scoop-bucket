{
    "version": "146.0.1",
    "description": "a free and open-source web browser developed by the Mozilla Foundation",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/146.0.1/win64/zh-CN/Firefox%20Setup%20146.0.1.exe#/dl.7z",
            "hash": "1217716c42d51a263a438a70a97898b8f2a577955435f4cc26bb353663df1310"
        },
        "32bit": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/146.0.1/win32/zh-CN/Firefox%20Setup%20146.0.1.exe#/dl.7z",
            "hash": "a5b5962bc98cf2d52e726dbac8ef1f5d7863cd6723c040afa7e9816938ead29a"
        },
        "arm64": {
            "url": "https://ftp.mozilla.org/pub/firefox/releases/146.0.1/win64-aarch64/zh-CN/Firefox%20Setup%20146.0.1.exe#/dl.7z",
            "hash": "f1e55d2b1bf1c359c1fca741d58f2c725f561ecf4de008a585c0d4064f7dae33"
        }
    },
    "extract_dir": "core",
    "post_install": [
        "$profilePath = Join-Path $env:AppData 'Mozilla\\Firefox'",
        "$persistPath = \"$persist_dir\"",
        "if (!(Test-Path $persistPath)) { New-Item -Path $persistPath -ItemType Directory | Out-Null }",
        "if (Test-Path $profilePath) { ",
        "    $testlink = (Get-Item $profilePath).LinkType",
        "    if ($testlink -ne 'Junction') {",
        "        Get-ChildItem -Path $profilePath | Move-Item -Destination $persistPath -Force",
        "        Remove-Item $profilePath -force",
        "        New-Item -ItemType Junction -Path $profilePath -Target $persistPath -Force | Out-Null",
        "    }",
        "} else {",
        "    New-Item -ItemType Junction -Path $profilePath -Target $persistPath -Force | Out-Null",
        "}"
    ],
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Mozilla Firefox-cn"
        ],
        [
            "firefox.exe",
            "Firefox-cn Profile Manager",
            "-P"
        ]
    ],
    "checkver": {
        "url": "https://product-details.mozilla.org/1.0/firefox_versions.json",
        "jsonpath": "$.LATEST_FIREFOX_VERSION"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win64/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA256SUMS",
                    "regex": "$sha256\\s+win64/zh-CN/$basename"
                }
            },
            "32bit": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win32/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA256SUMS",
                    "regex": "$sha256\\s+win32/zh-CN/$basename"
                }
            },
            "arm64": {
                "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/win64-aarch64/zh-CN/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://ftp.mozilla.org/pub/firefox/releases/$version/SHA256SUMS",
                    "regex": "$sha256\\s+win64-aarch64/zh-CN/$basename"
                }
            }
        }
    }
}
