{
    "version": "1.24",
    "description": "A code synchronization and comparison tool that can be used for free.",
    "homepage": "https://gitee.com/cxasm/cc-compare",
    "license": "LGPL-3.0",
    "notes": "run 'reg import install-context.reg' to add context menu for files, 'reg import uninstall-context.reg' to remove it",
    "architecture": {
        "64bit": {
            "url": "https://gitee.com/cxasm/cc-compare/releases/download/ccompare-v1.24/CCompare-v1.24-x64-Installer.exe#/dl.7z",
            "hash": "sha256:631407db2956f8829c82f6c525313681211147b08defcbcaa2c9d075f43a62fe"
        }
    },
    "post_install": [
        "$cc_root = \"$dir\".Replace('\\', '\\\\')",
        "'install-context.reg', 'uninstall-context.reg' | ForEach-Object {",
        "    $content = Get-Content \"$bucketsdir\\chenwb-scoop-bucket\\scripts\\CCompare\\$_\"",
        "    $content = $content.Replace('$cc_root', $cc_root)",
        "    if ($global) {",
        "       $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    Set-Content \"$dir\\$_\" $content -Encoding Ascii",
        "}"
    ],
    "bin": "CCompare.exe",
    "shortcuts": [
        [
            "CCompare.exe",
            "CCompare"
        ]
    ],
    "checkver": {
        "url": "https://gitee.com/cxasm/cc-compare/releases",
        "regex": "v([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://gitee.com/cxasm/cc-compare/releases/download/ccompare-v$version/CCompare-v$version-x64-Installer.exe#/dl.7z",
                "hash": {
                    "url": "https://gitee.com/cxasm/cc-compare/releases",
                    "regex": "CCompare-v$version-x64-Installer.exe.*?sha256:([a-f0-9]{64})"
                }
            }
        }
    }
}
