{
    "version": "1.0.12.162",
    "description": "ClashMI - A tool for managing network proxy settings.",
    "homepage": "https://clashmi.app/",
    "license": "GPL-3.0",
    "architecture": {
        "64bit": {
            "url": "https://github.com/KaringX/clashmi/releases/download/v1.0.12.162/clashmi_1.0.12.162_windows_x64.zip",
            "hash": "4a0ca00262831f8828b5bb9e39a839552b04afddd7e3594e453878af0059e9dc"
        }
    },
    "post_install":[
        "$configpath = Join-Path $env:AppData 'clashmi'",
        "$personalpath = $persist_dir",
        "if (!(Test-Path $personalpath)) { New-Item -ItemType Directory -Path $personalpath -force | Out-Null }",
        "if (Test-Path $configpath) { ",
        "$testlink = (Get-Item $configpath).LinkType",
        "if ($testlink -ne 'Junction') {",
        "Get-ChildItem -Path $configpath | Move-Item -Destination $personalpath -Force",
        "Remove-Item $configpath -force",
        "New-Item -ItemType Junction -Path $configpath -Target $personalpath -Force | Out-Null",
        "}",
        "} else {",
        "New-Item -ItemType Junction -Path $configpath -Target $personalpath -Force | Out-Null",
        "}"
    ],
    "bin": "ClashMI.exe",
    "shortcuts": [
        [
            "ClashMI.exe",
            "ClashMI"
        ]
    ],
    "checkver": {
        "github": "https://github.com/KaringX/clashmi"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/KaringX/clashmi/releases/download/v$version/clashmi_$version_windows_x64.zip",
                "hash": {
                    "url": "https://github.com/KaringX/clashmi/releases/tag/v$version"
                }
            }
        }
    }
}
